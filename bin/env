source $HOME/RetroTink-Setup/config

# if we have a timings file, let's use it!
hdmiTimings() {
	systemTimings="$hdmiTimingsDir/$mySystem"
	romTimings="$hdmiTimingsDir/game/$myRomBasename"
	# do we have one for this rom
	if [ -f "$romTimings" ]; then
		hdmiTimings="$(cat "$romTimings")"
	# if not, use generic timings
	elif [ -f "$systemTimings" ]; then
		hdmiTimings="$(cat $systemTimings)"
	fi

	# does the timings file exist?
	if [ "$hdmiTimings" ]; then
		# apply our new timings
		vcgencmd hdmi_timings $hdmiTimings
	fi
}
