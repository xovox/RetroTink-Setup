source $HOME/RetroTink-Setup/config

# if we have a timings file, let's use it!
hdmiTimings() {
	hdmiTimingsFile="$hdmiTimingsDir/$1"
	# does the timings file exist?
	if [ -f "$hdmiTimingsFile" ]; then
		# set it as a variable
		hdmi_timings="$(cat $hdmiTimingsFile)"
		# apply our new timings
		vcgencmd hdmi_timings $hdmi_timings >> /tmp/timings
	fi
}
