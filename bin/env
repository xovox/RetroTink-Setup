#!/bin/bash

# ############################################################################
# Common environment for any support scripts we use
# ############################################################################

source $HOME/RetroTink-Setup/config

# where we keep everything
retroTinkDir=$HOME/RetroTink-Setup

# our per-system video modes
hdmiTimingsDir=$retroTinkDir/hdmi_timings/$tvRegion

# if we have a timings file, let's use it!
hdmiTimings() {
	hdmiTimingsFile="$hdmiTimingsDir/$1"
	# does the timings file exist?
	if [ -f "$hdmiTimingsFile" ]; then
		# set it as a variable
		hdmi_timings="$(cat $hdmiTimingsFile)"
		# apply our new timings
		vcgencmd hdmi_timings $hdmi_timings
	fi
}
