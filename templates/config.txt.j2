# Standard Memory Allocations
gpu_mem=128
gpu_mem_256=112
gpu_mem_512=160
gpu_mem_1024=256

# disable warranty-voiding speeds
force_turbo=0

# don't awaken a display if it's in sleep mode
#hdmi_ignore_cec_init=1

# 3.5mm Audio
dtparam=audio=on
#disable_audio_dither=1

# Output Video Over GPIO
dtoverlay=dpi24
enable_dpi_lcd=1
display_default_lcd=1
dpi_output_format=519

# {{tv_region}} progressive scan boot
dpi_group=2
dpi_mode=87
hdmi_timings={{ hdmi_timings | mandatory}}

# Clean Up Our Boot
disable_splash=1
